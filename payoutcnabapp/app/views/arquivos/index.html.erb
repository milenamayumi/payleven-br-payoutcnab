<div class="panel panel-default" style="padding: 30px; overflow: scroll;">
  <div class="panel-body">

    <div>
      <br><br><br>
      <% if !flash[:notice].blank? %>
          <div class = "alert alert-info" >
            <%= flash[:notice] %>
          </div>
      <% end %>
      <%= link_to "New File", new_arquivo_path, class: "btn btn-primary" %>
      <br><br><br>
    </div>

    <% if !@arquivos.empty? %>
        <div class="panel panel-default" style="overflow: scroll;">
          <!-- Transactions table -->
          <table class="table table-striped">
            <thead class="thead-inverse">
            <tr>
              <th>Name</th>
              <th>Download Link</th>
              <th> </th>
            </tr>
            </thead>
            <tbody>
            <% @arquivos.each do |arquivo| %>
                <tr>
                  <td><%= arquivo.name %></td>
                  <td><%= link_to "Download File", arquivo.attachment_url %></td>
                  <td><%= button_to "Delete",  arquivo, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{arquivo.name}?" %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- end Transactions table -->
    <% else %>
        No items
    <% end %>

  </div>

</div>
